generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"     // (로컬 테스트) 운영에서 Postgres 쓰면 "postgresql"로 변경
  url      = env("DATABASE_URL")
}

// enum/Json을 쓰지 않고, 문자열/숫자 컬럼으로만 구성 (가장 호환성 높음)
model Response {
  id               String   @id @default(cuid())
  createdAt        DateTime @default(now())

  consent          Boolean

  // 아래 값들은 문자열로 저장 (예: "MALE", "A18_29", ...)
  sex              String
  ageGroup         String
  region           String

  // 배열/체크박스는 JSON 문자열로 저장 (예: '["유방암","폐암"]')
  personalHistory  String?   // JSON string
  familyHistory    Boolean

  smokingStatus    String
  alcoholFrequency String
  physicalActivity String

  heightCm         Int?
  weightKg         Int?
  bmi              Float?
  bmiCategory      String?   // 예: "UNDERWEIGHT" | "NORMAL" | "OVERWEIGHT" | "OBESE"

  screeningRecent  Boolean
  screeningTypes   String?   // JSON string
  symptoms         String?   // JSON string

  knowledgeLevel   String     // 예: "LOW" | "MEDIUM" | "HIGH"
  riskPerception   Int

  heardFrom        String?
  email            String?
  consentFollowup  Boolean?
  comments         String?
}
